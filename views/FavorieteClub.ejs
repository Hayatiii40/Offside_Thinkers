<!DOCTYPE html>
<html lang="nl">

<head>
  <meta charset="UTF-8" />
  <title>Favoriete Clubs</title>
  <link rel="stylesheet" href="/CSS/favc.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>

<body>
  <header>
    <img id="teamlogo" src="/assets/Logo.png" alt="offsidelogo" />
    <img id="ealogo" src="/assets/eaLogo.png" alt="ealogo" />
  </header>
  <a href="javascript:history.back()" class="back-button">
    <i class="fas fa-arrow-left"></i>
  </a>
  <main>
    <div id="container">
      <section class="zone1">
        <h1>Favoriete Clubs</h1>
        <div class="search-wrapper">
          <input id="searchbar" type="text" placeholder="Zoek een club" />
          <p class="glass">
            <i class="fa-solid fa-magnifying-glass" style="color: grey"></i>
          </p>
          <button id="searchbutton">Zoeken</button>
        </div>
      </section>

      <section class="zone2" id="favorites-list">
        <% if (clubs.length===0) { %>
          <p>Geen favoriete clubs gevonden.</p>
          <% } else { %>
            <% clubs.forEach(club=> { %>
              <div class="team">
                <img src="<%= club.crest %>" alt="<%= club.name %>" class="team-logo" />
                <span>
                  <%= club.name %>
                </span>
                <div class="button-wrapper">
                  <a href="/clubdetails/<%= club.id %>" class="info-btn">Info</a>
                  <form method="POST" action="/verwijder-favoriet" style="display:inline;">
                    <input type="hidden" name="clubId" value="<%= club.id %>" />
                    <button type="submit" class="delete-btn">Verwijderen</button>
                  </form>
                </div>
              </div>
              <% }) %>
                <% } %>
      </section>
    </div>
  </main>

</body>

</html>