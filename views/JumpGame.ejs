<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Football Juggler</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

  rel="stylesheet">
  <style>
    body {
      font-family: 'Montserrat', sans-serif;
      margin: 0;
      background-image: url(/assets/bgr.png);
      background-size: cover;
      background-position: center;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      overflow: hidden;
    }

   
    .title-container {
      background: linear-gradient(135deg, blue 0%, rgba(67, 198, 172, 0.8) 100%);
      border-radius: 15px;
      padding: 1rem 2rem;
      margin: 20px 0;
      text-align: center;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      border: 2px solid rgba(255, 255, 255, 0.3);
      backdrop-filter: blur(5px);
      position: relative;
      overflow: hidden;
    }

    .title-container::before {
      content: "";
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
      transform: rotate(30deg);
      animation: shine 6s infinite linear;
    }

    @keyframes shine {
      0% {
        transform: rotate(30deg) translate(-30%, -30%);
      }

      100% {
        transform: rotate(30deg) translate(30%, 30%);
      }
    }

    h1 {
      margin: 0;
      font-family: 'Bebas Neue', sans-serif;
      font-size: 3.5rem;
      letter-spacing: 2px;
      color: white;
      text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.5);
      position: relative;
    }

    .title-container p {
      margin: 0.5rem 0 0;
      font-size: 1.2rem;
      font-weight: 600;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
      position: relative;
    }

    
    canvas {
      border: 3px solid rgb(195, 199, 255);
      background-color: rgba(255, 255, 255, 0.400);
      border-radius: 10px;
      margin-top: 20px;
      box-shadow:
        0 0 10px blue,
        0 0 20px blue,
        0 0 30px blue,
        0 0 50px blue;
    }

    #scoreboard {
      margin-top: 10px;
      padding: 10px 20px;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 10px;
      border: 2px solid white;
      box-shadow: 0 0 15px black;
    }

    #scoreboard p {
      margin: 5px 0;
    }

    nav {
      background-color: black;
      width: 100vw;
      display: flex;
      justify-content: center;

      padding: 1rem 0;
    }

    nav img {
      margin-top: 0.3rem;
      height: 50px;
    }
  </style>
</head>

<body>
  <header>
    <nav>
      <img src="/Assets/logo.png" alt="Logo" />
    </nav>
  </header>

  <div class="title-container">
    <h1>⚽ SKY SOCCER ⚽</h1>
    <p>Druk op de bal om te spelen!</p>
  </div>

  <canvas id="gameCanvas" width="800" height="500"></canvas>

  <div id="scoreboard">
    <p>Score: <span id="score">0</span></p>
    <p>High Score: <span id="highScore">0</span></p>
  </div>

  
  <script>
    const canvas = document.getElementById("gameCanvas");
    const ctx = canvas.getContext("2d");
    const scoreText = document.getElementById("score");
    const highScoreText = document.getElementById("highScore");

    const football = new Image();
    football.src = "https://cdn.pixabay.com/photo/2013/07/13/10/51/football-157930_1280.png";

    let ball = {
      x: canvas.width / 2,
      y: canvas.height / 2,
      radius: 45,
      dx: 0,
      dy: 0,
    };

    const gravity = 0.16;
    const bouncePower = -8;
    const sidePush = 3;

    let score = 0;
    let highScore = localStorage.getItem("highScore") || 0;
    highScoreText.textContent = highScore;
    let gameStarted = false;

    function drawBall() {
      ctx.save();
      ctx.beginPath();
      ctx.arc(ball.x, ball.y, ball.radius, 0, Math.PI * 2);
      ctx.clip();
      ctx.drawImage(football, ball.x - ball.radius, ball.y - ball.radius, ball.radius * 2, ball.radius * 2);
      ctx.closePath();
      ctx.restore();
    }

    function update() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      drawBall();

      if (gameStarted) {
        ball.dy += gravity;
        ball.y += ball.dy;
        ball.x += ball.dx;

        if (ball.x - ball.radius < 0 || ball.x + ball.radius > canvas.width) {
          ball.dx *= -1;
        }

        if (ball.y + ball.radius > canvas.height) {
          gameOver();
        }
      }

      requestAnimationFrame(update);
    }

    function gameOver() {
      alert("⚠️ Game Over! \nFinal Score: " + score);
      if (score > highScore) {
        highScore = score;
        localStorage.setItem("highScore", highScore);
      }
      resetGame();
    }

    function resetGame() {
      ball.x = canvas.width / 2;
      ball.y = canvas.height / 2;
      ball.dx = 0;
      ball.dy = 0;
      score = 0;
      gameStarted = false;
      scoreText.textContent = score;
      highScoreText.textContent = highScore;
    }

    canvas.addEventListener("click", function (e) {
      const rect = canvas.getBoundingClientRect();
      const clickX = e.clientX - rect.left;
      const clickY = e.clientY - rect.top;

      const dx = clickX - ball.x;
      const dy = clickY - ball.y;
      const distance = Math.sqrt(dx * dx + dy * dy);

      if (distance < ball.radius) {
        ball.dy = bouncePower - Math.random() * 2;
        ball.dx = (Math.random() - 0.5) * 2 * sidePush;
        score++;
        scoreText.textContent = score;

        if (!gameStarted) gameStarted = true;
      }
    });

    football.onload = update;
  </script>
</body>

</html>
