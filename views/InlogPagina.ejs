<!DOCTYPE html>
<html lang="nl">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Inloggen</title>
  <link rel="stylesheet" href="/CSS/reset.css" />
  <link rel="stylesheet" href="/CSS/registratie.css" />
  <script src="/Javascript/Registratie.js" defer></script>
</head>

<body>
  <header>
    <div class="nav">
      <img src="/Assets/logo.png" alt="Logo" />
    </div>
  </header>

  <main>
    <div class="linkerkant">
      <div class="container">
        <div class="Patroon">
          <div class="driehoek"></div>
          <div class="driehoek"></div>
          <div class="driehoek"></div>
          <div class="driehoek"></div>
        </div>
        <div class="Patroon">
          <div class="driehoek"></div>
          <div class="driehoek"></div>
          <div class="driehoek"></div>
        </div>
        <div class="Patroon">
          <div class="driehoek"></div>
          <div class="driehoek"></div>
        </div>
        <div class="Patroon">
          <div class="driehoek"></div>
        </div>
      </div>
      <div class="afbeelding-vinicius"></div>
    </div>

    <div class="rechterkant">
      <form id="Formulier" method="POST" action="/login">
        <h2>Log in op uw account</h2>

        <% if (typeof error !=='undefined' ) { %>
          <p style="color: red;">
            <%= error %>
          </p>
          <% } %>

            <label for="username">Gebruikersnaam:</label>
            <input type="text" id="username" name="username" placeholder="Gebruikersnaam" required />

            <label for="password">Wachtwoord:</label>
            <input type="password" id="password" name="password" placeholder="Wachtwoord" required />

            <a class="Account" href="/registratie">
              Geen account?<br />
              <span id="aanmaken">Maak uw account aan</span>
            </a>

            <button type="submit">Inloggen</button>
      </form>

      <div class="container_beneden">
        <div class="Patroon_beneden">
          <div class="driehoek_beneden"></div>
        </div>
        <div class="Patroon_beneden">
          <div class="driehoek_beneden"></div>
          <div class="driehoek_beneden"></div>
        </div>
        <div class="Patroon_beneden">
          <div class="driehoek_beneden"></div>
          <div class="driehoek_beneden"></div>
          <div class="driehoek_beneden"></div>
        </div>
        <div class="Patroon_beneden">
          <div class="driehoek_beneden"></div>
          <div class="driehoek_beneden"></div>
          <div class="driehoek_beneden"></div>
          <div class="driehoek_beneden"></div>
        </div>
      </div>
    </div>
  </main>
</body>

</html>